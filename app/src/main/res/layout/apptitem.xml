<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="180dp"
    android:orientation="horizontal"
    android:background="@drawable/bottomborder"
    android:paddingBottom="10dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="40"
        android:weightSum="100">

        <ImageView
            android:id="@+id/imgApptParty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:padding="8dp"
            android:src="@drawable/appt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="Group/Friend Name"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#000000"
            android:gravity="center"
            android:fontFamily="@font/titillium"
            android:id="@+id/txtApptParty"
            android:autoSizeTextType="uniform"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:autoSizeTextType="uniform"
            android:text="APPT TITLE"
            android:textStyle="bold"
            android:textColor="#3b3561"
            android:fontFamily="@font/titillium"
            android:gravity="center"
            android:id="@+id/txtApptTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:text="30/10/2018"
            android:textColor="#3b3561"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/titillium"
            android:id="@+id/txtApptLocation"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:text="8.00PM"
            android:textColor="#3b3561"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/titillium"
            android:id="@+id/txtApptDate"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:text="8.00PM"
            android:textColor="#3b3561"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/titillium"
            android:id="@+id/txtApptTime"/>

    </LinearLayout>
    
</LinearLayout>