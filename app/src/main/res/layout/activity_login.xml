<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAccountActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#dfb1b6"
    android:padding="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAllCaps="true"
        android:text="Login"
        android:textSize="36sp"
        android:id="@+id/logintext1"
        android:fontFamily="@font/titillium"
        android:textColor="#d08363"
        android:layout_weight=".5"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Phone Number:"
            android:id="@+id/txtphoneno1"
            android:textSize="24sp"
            android:fontFamily="@font/titillium"
            android:textColor="#203f58"/>

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_box1"
            android:inputType="number"
            android:padding="15dp"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:columnCount="2">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/arrow_back"
            android:text="HOME"
            android:fontFamily="@font/titillium"
            android:textAllCaps="true"
            android:autoSizeTextType="uniform"
            android:paddingLeft="10dp"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/arrow_forward"
            android:text="Next"
            android:fontFamily="@font/titillium"
            android:textAllCaps="true"
            android:autoSizeTextType="uniform"
            android:paddingRight="10dp"
            android:layout_column="1"/>

    </GridLayout>

</LinearLayout>