<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0dfbb">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:autoSizeTextType="uniform"
        android:text="PROFILE"
        android:gravity="center"
        android:textColor="#5e2a40"
        android:id="@+id/txtProfile"
        android:fontFamily="@font/titillium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#000000"
        android:layout_below="@+id/txtProfile"
        android:id="@+id/line"/>

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnEdit"
        android:layout_below="@+id/line"
        android:gravity="center"
        android:weightSum="100"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:id="@+id/ivProfile"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="17"
            android:fontFamily="@font/titillium"
            android:gravity="center"
            android:text="Name"
            android:textColor="#5e2a40"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:fontFamily="@font/titillium"
            android:gravity="center"
            android:text="Age: "
            android:textColor="#5e2a40"
            android:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/tvHobbies"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="38"
            android:fontFamily="@font/titillium"
            android:gravity="center"
            android:text="Hobbies: "
            android:textColor="#5e2a40"
            android:autoSizeTextType="uniform"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="EDIT"
        android:fontFamily="@font/titillium"
        android:textColor="#203f58"
        android:background="#FFFFFF"
        android:autoSizeTextType="uniform"
        android:id="@+id/btnEdit"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@id/btnHome"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#dfb992"
        android:clickable="true"
        android:orientation="vertical"
        android:weightSum="100"
        android:id="@+id/btnHome"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="55"
            android:layout_marginTop="10dp"
            android:src="@drawable/home"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:text="HOME"
            android:textColor="#000000"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/titillium"/>

    </LinearLayout>

</RelativeLayout>