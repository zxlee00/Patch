<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAccountActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#dfb992"
    android:weightSum="100"
    android:padding="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAllCaps="true"
        android:text="Sign Up"
        android:textSize="36sp"
        android:fontFamily="@font/titillium"
        android:textColor="#9e6759"
        android:layout_weight="20"
        android:id="@+id/signuptext1"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="100"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Name:"
            android:id="@+id/nametext"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/titillium"
            android:textColor="#203f58"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:background="@drawable/edit_text_box1"
            android:inputType="textPersonName"
            android:padding="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Age:"
            android:id="@+id/agetext"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/titillium"
            android:textColor="#203f58"/>

        <Spinner
            android:id="@+id/spnAge"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:background="@drawable/edit_text_box1"
            android:padding="15dp"
            android:textAlignment="center">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="gender:"
            android:id="@+id/gendertext"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/titillium"
            android:textColor="#203f58"/>

        <Spinner
            android:id="@+id/spnGender"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:background="@drawable/edit_text_box1"
            android:padding="15dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="20"
        android:columnCount="2">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/arrow_back"
            android:text="Back"
            android:fontFamily="@font/titillium"
            android:textAllCaps="true"
            android:autoSizeTextType="uniform"
            android:paddingLeft="10dp"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/arrow_forward"
            android:text="Next"
            android:fontFamily="@font/titillium"
            android:textAllCaps="true"
            android:paddingRight="10dp"
            android:autoSizeTextType="uniform"
            android:layout_column="1"/>

    </GridLayout>

</LinearLayout>