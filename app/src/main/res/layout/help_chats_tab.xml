<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imghelpchats1"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/help_chats_1" />

            <TextView
                android:id="@+id/txthelpchats1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imghelpchats1"
                android:layout_margin="20dp"
                android:fontFamily="@font/arimo"
                android:gravity="center"
                android:text="CHATS TAB"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imghelpchats2"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@id/txthelpchats1"
                android:src="@drawable/help_chats_2" />

            <TextView
                android:id="@+id/txthelpchats2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imghelpchats2"
                android:layout_margin="20dp"
                android:fontFamily="@font/arimo"
                android:gravity="center"
                android:text="CHATS TAB"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imghelpchats3"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@id/txthelpchats2"
                android:src="@drawable/help_chats_3" />

            <TextView
                android:id="@+id/txthelpchats3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imghelpchats3"
                android:layout_margin="20dp"
                android:fontFamily="@font/arimo"
                android:gravity="center"
                android:text="CHATS TAB"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>